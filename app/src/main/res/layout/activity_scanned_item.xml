<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scanned_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.markbarrettdesign.ticketrv2.ScannedItemActivity"
    android:background="#00ca9f">

    <TextView
        android:text="Valid Ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:id="@+id/textView4"
        android:textSize="50sp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="23dp"
        android:id="@+id/tvUser"
        android:text="dddd"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUser"
        android:layout_alignLeft="@+id/tvUser"
        android:layout_alignStart="@+id/tvUser"
        android:layout_marginTop="23dp"
        android:id="@+id/tvOrderNumber"
        android:text="SSS"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center" />

    <Button
        android:text="Scan Another"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bScanAnother"
        android:layout_marginTop="164dp"
        android:fontFamily="sans-serif-medium"
        android:background="#FFFFFF"
        android:textColor="#00ca9f"
        android:layout_below="@+id/tvOrderNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
